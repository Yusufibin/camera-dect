<!--
  The "cargo wix" subcommand provides a variety of predefined variables available
  for customization of this template. The values for each variable are set based
  on the project's manifest (Cargo.toml) and the machine environment.
-->

<Wix xmlns='http://schemas.microsoft.com/wix/2006/wi'>

    <Product
        Id='*'
        Name='$(var.CargoPackageName)'
        UpgradeCode='$(var.UpgradeCode)'
        Manufacturer='$(var.CargoPackageManufacturer)'
        Language='1033'
        Codepage='1252'
        Version='$(var.CargoPackageVersion)'>

        <Package Id='*'
            Keywords='Installer'
            Description='$(var.CargoPackageDescription)'
            Manufacturer='$(var.CargoPackageManufacturer)'
            InstallerVersion='450'
            Languages='1033'
            Compressed='yes'
            InstallScope='perMachine'
            SummaryCodepage='1252'
            />

        <MajorUpgrade
            Schedule='afterInstallInitialize'
            DowngradeErrorMessage='A newer version of [ProductName] is already installed. Setup will now exit.'/>

        <Media Id='1' Cabinet='media1.cab' EmbedCab='yes' DiskPrompt='CD-ROM #1'/>
        <Property Id='DiskPrompt' Value='$(var.CargoPackageName) Installation [1]'/>

        <Directory Id='TARGETDIR' Name='SourceDir'>
            <Directory Id='ProgramFiles64Folder' Name='PFiles'>
                <Directory Id='APPLICATIONFOLDER' Name='$(var.CargoPackageName)'>

                    <Directory Id='Bin' Name='bin'>
                        <Component Id='Path' Guid='$(var.PathCode)' KeyPath='yes'>
                            <Environment
                                Id='PATH'
                                Name='PATH'
                                Value='[Bin]'
                                Permanent='no'
                                Part='last'
                                Action='set'
                                System='yes'/>
                        </Component>
                        <Component Id='binary0' Guid='*'>
                            <File
                                Id='exe0'
                                Name='$(var.CargoPackageName).exe'
                                DiskId='1'
                                Source='$(var.CargoTargetBinDir)\rustguard-vision.exe'
                                KeyPath='yes'/>
                        </Component>
                        <!--
                             Qt Dependency Placeholders
                             IMPORTANT: You must run 'windeployqt' on the generated executable.
                             Then, add <Component> blocks here for each DLL found in the folder.

                             Example:
                             <Component Id='Qt6Core' Guid='*'>
                                <File Id='Qt6CoreDll' Name='Qt6Core.dll' Source='$(var.CargoTargetBinDir)\Qt6Core.dll' KeyPath='yes'/>
                             </Component>
                        -->
                    </Directory>
                </Directory>
            </Directory>
        </Directory>

        <Feature
            Id='Binaries'
            Title='Application'
            Description='Installs all binaries and the license.'
            Level='1'
            ConfigurableDirectory='APPLICATIONFOLDER'
            AllowAdvertise='no'
            Display='expand'
            Absent='disallow'>

            <ComponentRef Id='binary0'/>

            <!-- Add ComponentRefs for your Qt DLLs here
                 Example:
                 <ComponentRef Id='Qt6Core'/>
            -->

            <Feature
                Id='Environment'
                Title='PATH Environment Variable'
                Description='Add the install location of the [ProductName] executable to the PATH system environment variable. This allows the executable to be called from any location.'
                Level='1'
                Absent='allow'>
                <ComponentRef Id='Path'/>
            </Feature>
        </Feature>

        <SetProperty Id='ARPINSTALLLOCATION' Value='[APPLICATIONFOLDER]' After='CostFinalize'/>

        <Property Id='ARPHELPLINK' Value='https://www.rustguard.com'/>

        <UI>
            <UIRef Id='WixUI_FeatureTree'/>
            <Publish Dialog='WelcomeDlg' Control='Next' Event='NewDialog' Value='CustomizeDlg' Order='99'>1</Publish>
            <Publish Dialog='CustomizeDlg' Control='Back' Event='NewDialog' Value='WelcomeDlg' Order='99'>1</Publish>
        </UI>

    </Product>

</Wix>
